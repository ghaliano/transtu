{% extends 'base.html.twig' %}

{% block title %}Ligne index{% endblock %}

{% block body %}
    <h1>Ligne index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ligne in lignes %}
            <tr>
                <td>{{ ligne.id }}</td>
                <td>{{ ligne.name }}</td>
                <td>{{ ligne.code }}</td>
                <td>
                    <a href="{{ path('ligne_show', {'id': ligne.id}) }}">show</a>
                    <a href="{{ path('ligne_edit', {'id': ligne.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ligne_new') }}">Create new</a>
{% endblock %}
