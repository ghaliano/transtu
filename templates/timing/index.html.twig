{% extends 'base.html.twig' %}

{% block title %}Timing index{% endblock %}

{% block body %}
    <h1>Timing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Arrival_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timing in timings %}
            <tr>
                <td>{{ timing.id }}</td>
                <td>{{ timing.arrivalAt ? timing.arrivalAt|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('timing_show', {'id': timing.id}) }}">show</a>
                    <a href="{{ path('timing_edit', {'id': timing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timing_new') }}">Create new</a>
{% endblock %}
